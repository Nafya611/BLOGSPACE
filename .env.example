# Environment Variables for Render Deployment
# Copy these values and set them in your Render dashboard

# Backend Configuration
RENDER=true
DEBUG=False
DJANGO_SETTINGS_MODULE=BLOG.settings
PORT=8000

# Security (Generate these)
SECRET_KEY=your-secret-key-here
FALLBACK_SECRET_KEY=django-insecure-fallback-key-for-development-only-change-in-production

# Domain Configuration
ALLOWED_HOSTS=your-app-name.onrender.com,localhost,127.0.0.1

# Database Configuration (Set by Render automatically)
DATABASE_URL=postgresql://user:pass@host:port/db
POSTGRES_DB=blogdb
POSTGRES_USER=bloguser
POSTGRES_PASSWORD=your-db-password
DB_HOST=your-db-host
DB_PORT=5432

# Google OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_OAUTH_REDIRECT_URI=https://your-app-name.onrender.com/api/user/google-callback/

# Frontend Configuration (for Vercel)
VITE_API_URL=https://your-app-name.onrender.com